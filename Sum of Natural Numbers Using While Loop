#include<stdio.h>
int main()
{
    
    while(1)
    {   
        int n, sum = 0;
        printf("Enter the number : ");
        scanf("%d",&n);
        int i=1;
        while(i<=n)
        {
            sum = sum +i;
            i++;
        }
        printf("The sum is %d\n",sum);

    }
    return 0;
}
